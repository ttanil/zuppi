            path: 'img/teacher.json'
        });
        lottie.loadAnimation({
            container: document.getElementById('shop-lottie'),
            renderer: 'svg',
            loop: true,
            autoplay: true,
            path: 'img/Shop.json'
        });
        lottie.loadAnimation({
            container: document.getElementById('video-lottie'),
            renderer: 'svg',
            loop: true,
            autoplay: true,
            path: 'img/Video.json'
        });
        lottie.loadAnimation({
            container: document.getElementById('membership-lottie'),
            renderer: 'svg',
            loop: true,
            autoplay: true,
            path: 'img/membership.json'
        });

// ---------------gÃ¶rÃ¼ntÃ¼ kaymasÄ± -----------------
        const container = document.getElementById('mobile-cards');

        if (container) {
          let currentIndex = 0;
          const totalCards = container.children.length;
          let startX = 0;

          function updateCarousel() {
            const cardWidth = 250;
            const gap = 0;
            
            const containerWidth = container.parentElement.offsetWidth;
            const centerOffset = (containerWidth / 2) - (cardWidth / 2);
            
            const translateX = centerOffset - (currentIndex * cardWidth);
            
            container.style.transform = `translateX(${translateX}px)`;
            
            const cards = container.children;
            Array.from(cards).forEach((card, index) => {
              const distance = Math.abs(index - currentIndex);
              
              if (index === currentIndex) {
                card.style.transform = 'scale(1.0)';
                card.style.opacity = '1';
                card.style.zIndex = '10';
              } else if (distance === 1) {
                card.style.transform = 'scale(0.85)';
                card.style.opacity = '0.7';
                card.style.zIndex = '5';
              } else {
                card.style.transform = 'scale(0.7)';
                card.style.opacity = '0.3';
                card.style.zIndex = '1';
              }
              
              card.style.transition = 'all 0.4s ease-in-out';
            });
          }

          container.addEventListener('touchstart', function(e) {
            startX = e.touches[0].clientX;
          });

          container.addEventListener('touchend', function(e) {
            const endX = e.changedTouches[0].clientX;
            const diffX = startX - endX;
            
            if (diffX > 50 && currentIndex < totalCards - 1) {
              currentIndex++;
            } else if (diffX < -50 && currentIndex > 0) {
              currentIndex--;
            }
            
            updateCarousel();
          });

          updateCarousel();
          window.addEventListener('resize', () => updateCarousel());
        }

        //--------------------------------------------

        // Desktop carousel kartlarÄ± iÃ§in video aÃ§ma
        document.querySelectorAll('.video-card').forEach(card => {
          card.addEventListener('click', function() {
            const videoFile = this.getAttribute('data-video');
            const videoTitle = this.getAttribute('data-title') || '';

            fetch('/video-url', {
              method: 'POST',
              headers: { 'Content-Type': 'application/json' },
              body: JSON.stringify({ filename: videoFile })
            })
              .then(res => res.json())
              .then(data => openVideoModal(data.url, videoTitle))
              .catch(() => alert("Video baÄŸlantÄ±sÄ± alÄ±namadÄ±."));
          });
        });

        // Mobil kartlar iÃ§in play button'a tÄ±klama
        document.querySelectorAll('#mobile-cards > div').forEach(card => {
          // Play button'u bul
          const playButton = card.querySelector('.bg-white\\/30');
          
          if (playButton) {
            playButton.addEventListener('click', function(e) {
              e.stopPropagation(); // KartÄ±n diÄŸer click eventlerini engelle
              
              const videoFile = card.getAttribute('data-video') || 'miray-tanitim.mp4';
              const videoTitle = card.getAttribute('data-title') || '';

              // Backend'den pre-signed url'i al:
              fetch('/video-url', {
                method: 'POST',
                headers: { 'Content-Type': 'application/json' },
                body: JSON.stringify({ filename: videoFile })
              })
                .then(res => res.json())
                .then(data => openVideoModal(data.url, videoTitle))
                .catch(() => alert("Video baÄŸlantÄ±sÄ± alÄ±namadÄ±."));
            });
          }
        });
        // Modal kapatma event'leri
        const closeBtn = document.getElementById('closeVideoModalBtn');
        const modal = document.getElementById('videoModal');

        if (closeBtn) {
            closeBtn.addEventListener('click', closeVideoModal);
        }

        // Modal dÄ±ÅŸÄ±na tÄ±klama ile kapatma
        if (modal) {
            modal.addEventListener('click', function(e) {
                if (e.target === modal) {
                    closeVideoModal();
                }
            });
        }

        // ESC tuÅŸu ile kapatma
        document.addEventListener('keydown', function(e) {
            if (e.key === 'Escape') {
                const modal = document.getElementById('videoModal');
                if (modal && !modal.classList.contains('hidden')) {
                    closeVideoModal();
                }
            }
        });


    });

        
    
</script>
