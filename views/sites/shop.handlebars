  <script>  
    // Responsive sidebar içeriği kopyala  
    const sidebarSource = document.querySelector('aside.sidebar');  
    const mobileSidebar = document.getElementById('mobileSidebar');  
    const sidebarMobileContent = document.getElementById('sidebarMobileContent');  
    let sidebarHTML;  
    if (sidebarSource && sidebarMobileContent) sidebarHTML = sidebarSource.innerHTML;  
    if (window.innerWidth < 1024 && sidebarHTML) sidebarMobileContent.innerHTML = sidebarHTML;  

    const filterBtn = document.querySelector(".mobile-filter-btn");  
    function mobileCheckSidebar() {  
      if(window.innerWidth < 1024) {  
        if(sidebarMobileContent.innerHTML==="" && sidebarHTML) sidebarMobileContent.innerHTML = sidebarHTML;  
        filterBtn.style.display="flex";  
      } else {  
        filterBtn.style.display="none";  
        mobileSidebar.classList.remove("active");  
        document.getElementById("mobileSidebarBackdrop").style.display="none";  
        document.body.style.overflow=null;  
      }  
    }  
    window.addEventListener("resize", mobileCheckSidebar); mobileCheckSidebar();  
    filterBtn.addEventListener("click", function(){  
      mobileSidebar.classList.add("active");  
      document.getElementById("mobileSidebarBackdrop").style.display="block";  
      document.body.style.overflow="hidden";  
    });  
    document.getElementById("closeMobileSidebar").addEventListener("click", function(){
      mobileSidebar.classList.remove("active");
      document.getElementById("mobileSidebarBackdrop").style.display = "none";
      document.body.style.overflow = null;
    });
    document.getElementById("mobileSidebarBackdrop").addEventListener("click", function(){
      mobileSidebar.classList.remove("active");
      this.style.display = "none";
      document.body.style.overflow = null;
    });

    // Accordion kontrolleri hem masaüstü hem mobil sidebar'da aktif olur şekilde
    function accordionsOnAllSidebars(){
      document.querySelectorAll('.accordion-btn').forEach((btn, idx, arr) => {
        btn.onclick = function() {
          arr.forEach((b) => {
            if (b !== btn) {
              b.nextElementSibling.classList.add('hidden');
              b.querySelector('svg').classList.remove('rotate-180');
            }
          });
          btn.nextElementSibling.classList.toggle('hidden');
          btn.querySelector('svg').classList.toggle('rotate-180');
        }
      });
      document.querySelectorAll('.brand-btn').forEach((btn, idx, arr) => {
        btn.onclick = function() {
          arr.forEach((b) => { if (b !== btn) b.nextElementSibling.classList.add('hidden'); });
          btn.nextElementSibling.classList.toggle('hidden');
        }
      });
    }
    accordionsOnAllSidebars();
    // Mobil filtre açıldığında da tekrar bağla
    filterBtn.addEventListener("click", function(){ setTimeout(accordionsOnAllSidebars,200); });

    // Ürün (PRODUCTS) dizisi örnek
    const PRODUCTS = [
      {
        category: "Jel ve Oje Ürünleri",
        name: "Radiant Red Jel Oje",
        price: 49.90,
        img: "https://images.pexels.com/photos/965989/pexels-photo-965989.jpeg?auto=compress&w=400&h=400&fit=crop"
      },
      {
        category: "Jel ve Oje Ürünleri",
        name: "Ultra Shine UV Oje",
        price: 56.00,
        img: "https://images.pexels.com/photos/413880/pexels-photo-413880.jpeg?auto=compress&w=400&h=400&fit=crop"
      },
      {
        brand: "Nailbox",
        brandSub: "Jel Oje",
        name: "Nailbox Pastel Blue",
        price: 42.50,
        img: "https://images.pexels.com/photos/760725/pexels-photo-760725.jpeg?auto=compress&w=400&h=400&fit=crop"
      },
      {
        brand: "Nailbox",
        brandSub: "Klasik Oje",
        name: "Nailbox Classic Pink",
        price: 29.90,
        img: "https://images.pexels.com/photos/272937/pexels-photo-272937.jpeg?auto=compress&w=400&h=400&fit=crop"
      },
      {
        brand: "Glitterify",
        brandSub: "Sim ve Pul",
        name: "Glitter Silver Flake",
        price: 39.90,
        img: "https://images.pexels.com/photos/1092730/pexels-photo-1092730.jpeg?auto=compress&w=400&h=400&fit=crop"
      },
      {
        brand: "ProArt",
        brandSub: "Jel & UV Oje",
        name: "ProArt Neon Jel",
        price: 59.00,
        img: "https://images.pexels.com/photos/1667083/pexels-photo-1667083.jpeg?auto=compress&w=400&h=400&fit=crop"
      },
      {
        brand: "BeautyLab",
        brandSub: "Bakım Ürünleri",
        name: "BeautyLab Nail Serum",
        price: 64.00,
        img: "https://images.pexels.com/photos/3738349/pexels-photo-3738349.jpeg?auto=compress&w=400&h=400&fit=crop"
      }
    ];

    // Ürünleri listele
    function renderProducts(items) {
      const grid = document.getElementById('product-grid');
      if (!grid) return;
      if (!items || !items.length) {
        grid.innerHTML = `<div class="col-span-3 text-center text-gray-400 text-xl py-10">Ürün bulunamadı.</div>`;
        return;
      }
      grid.innerHTML = items.map(product => `
        <div class="bg-white rounded-2xl p-4 shadow flex flex-col gap-3 items-center">
          <img src="${product.img}" class="rounded-xl mb-2 w-40 h-40 object-cover" alt="${product.name}">
          <div class="font-semibold text-gray-800">${product.name}</div>
          <div class="text-gray-600 text-lg">₺${product.price.toLocaleString("tr-TR", {minimumFractionDigits:2})}</div>
          <div class="flex items-center border border-gray-300 rounded mb-2
                      w-24 sm:w-32
                      justify-between">
            <button class="w-7 h-7 sm:w-8 sm:h-8 flex items-center justify-center
                          text-base sm:text-lg text-gray-600 font-bold decrease-btn" type="button">-</button>
            <span class="w-7 sm:w-8 text-center qty text-sm sm:text-base">1</span>
            <button class="w-7 h-7 sm:w-8 sm:h-8 flex items-center justify-center
                          text-base sm:text-lg text-gray-600 font-bold increase-btn" type="button">+</button>
          </div>
          <button class="w-full bg-blue-600 hover:bg-blue-700 text-white
                        font-semibold rounded
                        py-1.5 sm:py-2 mt-1 transition
                        text-sm sm:text-base
                        ">Sepete Ekle</button>
        </div>
      `).join('');
      attachQtyListeners();
    }

    // Filtrenin tıklama bağlatılarını hem desktop hem mobile bağla
    function bindFilterClicks(context=document) {
      context.querySelectorAll('.accordion-btn + ul > li').forEach(li => {
        li.onclick = function() {
          const category = li.closest('li').querySelector('.accordion-btn').childNodes[0].nodeValue.trim();
          const filtered = PRODUCTS.filter(p => p.category === category);
          document.getElementById('shop-category-title').innerText = `${category}`;
          renderProducts(filtered);
          if(window.innerWidth < 1024) {
            mobileSidebar.classList.remove("active");
            document.getElementById("mobileSidebarBackdrop").style.display="none";
            document.body.style.overflow = null;
          }
        }
      });
      context.querySelectorAll('.brand-btn + ul > li').forEach(li => {
        li.onclick = function() {
          const brandWrap = li.closest('li');
          const brand = brandWrap.querySelector('.brand-btn').textContent.trim();
          const brandSub = li.textContent.trim();
          const filtered = PRODUCTS.filter(p => p.brand === brand && p.brandSub === brandSub);
          document.getElementById('shop-category-title').innerText = `${brand} / ${brandSub}`;
          renderProducts(filtered);
          if(window.innerWidth < 1024) {
            mobileSidebar.classList.remove("active");
            document.getElementById("mobileSidebarBackdrop").style.display="none";
            document.body.style.overflow = null;
          }
        }
      });
    }

    // Hem masaüstü hem mobilden bağla
    bindFilterClicks(document);
    filterBtn.addEventListener("click", function(){ setTimeout(function(){ bindFilterClicks(mobileSidebar) },100); });

    // Sepet adedi +/-
    function attachQtyListeners() {
      document.querySelectorAll('.decrease-btn').forEach((btn) => {
        btn.addEventListener('click', function() {
          const qtySpan = btn.parentElement.querySelector('.qty');
          let val = parseInt(qtySpan.textContent, 10);
          if (val > 1) qtySpan.textContent = val - 1;
        });
      });
      document.querySelectorAll('.increase-btn').forEach((btn) => {
        btn.addEventListener('click', function() {
          const qtySpan = btn.parentElement.querySelector('.qty');
          let val = parseInt(qtySpan.textContent, 10);
          qtySpan.textContent = val + 1;
        });
      });
    }

    // --- FİLTRE BUTONU SAĞA KAYSIN: ---
    function moveFilterBtnRight() {
        filterBtn.classList.remove("left-7");
        filterBtn.classList.add("right-7");
    }
    function moveFilterBtnLeft() {
        filterBtn.classList.remove("right-7");
        filterBtn.classList.add("left-7");
    }
    filterBtn.addEventListener("click", function(){
    mobileSidebar.classList.add("active");
        document.getElementById("mobileSidebarBackdrop").style.display="block";
        document.body.style.overflow="hidden";
        // Menü açıldığında buton sağa!
        moveFilterBtnRight();
    });
    document.getElementById("closeMobileSidebar").addEventListener("click", function(){
        mobileSidebar.classList.remove("active");
        document.getElementById("mobileSidebarBackdrop").style.display = "none";
        document.body.style.overflow = null;
        // Menü kapanınca buton sola döner!
        moveFilterBtnLeft();
    });
    document.getElementById("mobileSidebarBackdrop").addEventListener("click", function(){
        mobileSidebar.classList.remove("active");
        this.style.display = "none";
        document.body.style.overflow = null;
        // Menü kapanınca buton sola döner!
        moveFilterBtnLeft();
    });

    // Başlangıçta ilk 6 ürünü göster
    renderProducts(PRODUCTS.slice(0,6));
  </script>
