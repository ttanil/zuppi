                        activeExpertise.add(key);
                    }
                    
                    // Desktop chip'lerini yeniden render et
                    renderChips();
                }
            }
        }
    });
    // Mobile search ve sort i√ßin event listener ekleyin
    teacherSearchMobile?.addEventListener('input', () => {
        teacherSearch.value = teacherSearchMobile.value;
        update();
    });

    sortSelectMobile?.addEventListener('change', () => {
        sortSelect.value = sortSelectMobile.value;
        update();
    });

    //----------------------------------

    // Uzmanlƒ±k listesi (unique)  
    const EXPERTISE = [...new Set(TEACHERS.flatMap(t => t.expertise))];  
    let activeExpertise = new Set(); // √ßoklu filtre  

    // Chipleri √ßiz  
    function renderChips() {  
        expertiseChips.innerHTML = `  
            <button class="chip ${activeExpertise.size === 0 ? 'chip-active' : ''}" data-chip="__all">  
            T√ºm√º  
            </button>  
            ${EXPERTISE.map(x => `  
            <button class="chip ${activeExpertise.has(x) ? 'chip-active' : ''}" data-chip="${x}">  
                ${x}  
            </button>  
            `).join('')}  
        `;  

        expertiseChips.querySelectorAll('button').forEach(btn => {  
            btn.addEventListener('click', () => {  
                const key = btn.dataset.chip;  
                
                if (key === '__all') {  
                    activeExpertise.clear();  
                } else {  
                    if (activeExpertise.has(key)) {  
                        activeExpertise.delete(key);  
                    } else {  
                        activeExpertise.add(key);  
                    }  
                }  
                
                renderChips();  
                update();  
            });  
        });  
    }  

    // Kart ≈üablonu  
    function teacherCard(t) {  
        const badges = t.expertise.slice(0, 3).map(x => `  
            <span class="text-[10px] sm:text-xs px-1.5 sm:px-2 py-1 rounded-full bg-zinc-800 border border-zinc-700 text-gray-300">${x}</span>  
