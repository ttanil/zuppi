            #detailCV pre {
                font-size: 0.875rem;
                line-height: 1.4;
            }
            .teacher-card {
                flex: 0 0 calc(100% - 0px);
                min-width: 250px;
            }
            
            .carousel-container {
                padding: 0 40px;
            }
            
            .nav-btn {
                width: 40px;
                height: 40px;
            }
        }

        /* Buton hover efektleri */
        button {
            transition: all 0.2s ease;
        }

        button:hover {
            transform: translateY(-1px);
        }

        /* Link hover efektleri */
        a {
            transition: color 0.2s ease;
        }

        .gradient-border {
            background: linear-gradient(45deg, #dc2626, #7c3aed);
            padding: 1px;
            border-radius: inherit;
        }

        .gradient-border > * {
            background: #18181b;
            border-radius: inherit;
        }

        .loading {
            opacity: 0.6;
            pointer-events: none;
            position: relative;
        }

        .loading::after {
            content: '';
            position: absolute;
            top: 50%;
            left: 50%;
            width: 20px;
            height: 20px;
            margin: -10px 0 0 -10px;
            border: 2px solid #dc2626;
            border-radius: 50%;
            border-top-color: transparent;
            animation: spin 1s linear infinite;
        }

        @keyframes spin {
            to {
                transform: rotate(360deg);
            }
        }

        #detailModal {
            scrollbar-width: thin;
            scrollbar-color: #3f3f46 #18181b;
