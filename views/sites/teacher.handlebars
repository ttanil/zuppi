    <style>
        body { overflow-x: hidden; }
        .lottie-animation {
            margin-left: -18px;
            margin-right: -18px;
        }
        
        .inline-block {
            margin-left: -21px;
        }
        
        .zuppi-logo {
            margin-top: 6px !important;
        }
        
        .chip {
            padding: 0.375rem 0.75rem;
            border-radius: 9999px;
            font-size: 0.75rem;
            line-height: 1rem;
            border: 1px solid #3f3f46;
            background: #18181b;
            color: #e5e7eb;
            white-space: nowrap;
            transition: border-color .2s ease;
            cursor: pointer;
        }
        
        .chip:hover {
            border-color: #52525b;
        }
        
        .chip-active {
            border-color: #dc2626;
            color: #fecaca;
            background: rgba(24, 24, 27, 0.7);
        }
        
        .teacher-card:hover .teacher-cover {
            transform: scale(1.03);
        }
        
        .teacher-card {
            transition: all 0.3s ease;
        }
        
        .teacher-card:hover {
            transform: translateY(-4px);
            box-shadow: 0 10px 25px rgba(0, 0, 0, 0.5);
        }
        
        @media (max-width: 640px) {
            .chip {
                padding: 0.25rem 0.5rem;
                font-size: 0.7rem;
            }
        }
        
        .chip:hover {
            border-color: #52525b;
        }
        
        .chip-active {
            border-color: #dc2626;
            color: #fecaca;
            background: rgba(24, 24, 27, 0.7);
        }
        
        .teacher-card:hover .teacher-cover {
            transform: scale(1.03);
        }
        
        .teacher-card {
            transition: all 0.3s ease;
        }
        
        .teacher-card:hover {
            transform: translateY(-4px);
            box-shadow: 0 10px 25px rgba(0, 0, 0, 0.5);
        }

        /* Scrollbar gizleme */
        .scrollbar-hide {
            -ms-overflow-style: none;
            scrollbar-width: none;
        }
        .scrollbar-hide::-webkit-scrollbar {
            display: none;
        }
        /* Mobil chips için alt alta sıralama */
        #expertiseChipsMobile .chip {
            display: block;
            width: 100%;
            text-align: center;
            margin-bottom: 0.5rem;
        }

        /* Veya flex-wrap kullanırsanız */
        #expertiseChipsMobile.flex-wrap .chip {
            flex-shrink: 0;
        }
        /* Mobil chips aktif durumu */
        #expertiseChipsMobile .chip-active {
            border-color: #dc2626 !important;
            color: #fecaca !important;
            background: rgba(220, 38, 38, 0.1) !important;
        }

        /* Mobil chips hover durumu */
        #expertiseChipsMobile .chip:hover {
            border-color: #52525b;
        }

        #expertiseChipsMobile .chip-active:hover {
            border-color: #dc2626 !important;
        }
        
        /* Mobil modal iyileştirmeleri */
        @media (max-width: 768px) {
            #detailModal > div {
                max-width: calc(100vw - 16px) !important;
                margin: 8px !important;
                max-height: calc(100vh - 16px) !important;
            }
            
            /* CV İçeriği mobilde daha küçük font */
            #detailCV pre {
                font-size: 0.875rem;
                line-height: 1.4;
            }
        }
        
        /* Mobil için buton boyutları */
        @media (max-width: 640px) {
            .teacher-card button {
                font-size: 0.75rem;
                padding: 0.375rem 0.75rem;
            }
            
        }
    </style>
