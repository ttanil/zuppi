                <img src="${t.cover}" alt="${t.name}" class="teacher-cover w-full h-40 sm:h-44 md:h-48 object-cover transition-transform duration-300" />  
                ${t.featured ? `<span class="absolute top-2 sm:top-3 left-2 sm:left-3 bg-red-600 text-white text-[9px] sm:text-xs font-semibold px-2 py-1 rounded-full">√ñne √áƒ±kan</span>` : ''}  
                <img src="${t.avatar}" alt="${t.name}" class="w-12 h-12 sm:w-14 sm:h-14 rounded-full border-2 border-zinc-900 absolute -bottom-6 sm:-bottom-7 left-3 sm:left-4 object-cover" />  
            </div>  
            <div class="pt-8 sm:pt-9 px-3 sm:px-4 pb-3 sm:pb-4">  
                <div class="flex items-center justify-between">  
                <h3 class="text-base sm:text-lg font-bold truncate pr-2">${t.name}</h3>  
                <div class="flex items-center gap-1 text-yellow-400 flex-shrink-0">  
                    <svg class="w-3 h-3 sm:w-4 sm:h-4" viewBox="0 0 24 24" fill="currentColor">  
                    <path d="M12 17.27L18.18 21l-1.64-7.03L22 9.24l-7.19-.61L12 2 9.19 8.63 2 9.24l5.46 4.73L5.82 21z"/>  
                    </svg>  
                    <span class="text-xs sm:text-sm text-gray-200">${t.rating.toFixed(1)}</span>  
                </div>  
                </div>  
                <p class="text-gray-300 text-xs sm:text-sm mt-1 line-clamp-2">${t.bio}</p>  
                <div class="flex flex-wrap gap-1 sm:gap-1.5 mt-2 sm:mt-3">${badges}</div>  
                <div class="flex items-center justify-between mt-3 sm:mt-4 text-xs text-gray-400">  
                <div class="flex items-center gap-1">  
                    <svg class="w-3 h-3 sm:w-4 sm:h-4 text-blue-400" viewBox="0 0 24 24" fill="currentColor">  
                    <path d="M3 5h18v2H3zm0 6h12v2H3zm0 6h18v2H3z"/>  
                    </svg>  
                    <span class="text-xs">${t.courses} ders</span>  
                </div>  
                <div class="flex gap-1 sm:gap-2">  
                    <button class="px-2 sm:px-3 py-1 sm:py-1.5 rounded-lg bg-red-600 hover:bg-red-700 text-white font-semibold text-xs sm:text-sm" data-detail="${t.id}">  
                    Detay  
                    </button>  
                    <button class="px-2 sm:px-3 py-1 sm:py-1.5 rounded-lg border border-zinc-700 hover:border-zinc-600 text-gray-200 font-semibold text-xs sm:text-sm" data-open="${t.id}">  
                    Profil  
                    </button>  
                </div>  
                </div>  
            </div>  
            </article>  
        `;  
    }

    // Listeyi √ßiz  
    function renderTeachers(list) {  
        if (!list.length) {  
            teacherGrid.innerHTML = '';  
            noResults.classList.remove('hidden');  
            return;  
        }  
        
        noResults.classList.add('hidden');  
        teacherGrid.innerHTML = list.map(teacherCard).join('');  

        // Profili G√∂r butonlarƒ± (eski modal)  
        teacherGrid.querySelectorAll('button[data-open]').forEach(btn => {  
            btn.addEventListener('click', () => {  
                const t = TEACHERS.find(x => x.id === btn.dataset.open);  
                if (t) openModal(t);  
            });  
        });  

        // Detay butonlarƒ± (yeni CV modal)  
        teacherGrid.querySelectorAll('button[data-detail]').forEach(btn => {  
            btn.addEventListener('click', () => {  
                const t = TEACHERS.find(x => x.id === btn.dataset.detail);  
                if (t) openDetailModal(t);  
            });  
        });  
    }  

    // Filtreleme + sƒ±ralama  
    function filterTeachers() {  
        const q = (teacherSearch.value || '').trim().toLowerCase();  
        let arr = TEACHERS.filter(t => {  
            const inText =   
            t.name.toLowerCase().includes(q) ||  
            t.bio.toLowerCase().includes(q) ||  
            t.expertise.join(' ').toLowerCase().includes(q);  

            const expertiseOk =   
            activeExpertise.size === 0 ||  
            t.expertise.some(x => activeExpertise.has(x));  

            return inText && expertiseOk;  
        });  

        const s = sortSelect.value;  
        if (s === 'popularity') {  
            arr.sort((a, b) => Number(b.featured) - Number(a.featured));  
        } else if (s === 'rating') {  
            arr.sort((a, b) => b.rating - a.rating);  
        } else if (s === 'courses') {
            arr.sort((a, b) => b.courses - a.courses);
        } else if (s === 'new') {
            // √ñrnek olmasƒ± i√ßin isim sƒ±rasƒ±
            arr.sort((a, b) => a.name.localeCompare(b.name));
        }

        return arr;
    }

    function update() {
        renderTeachers(filterTeachers());
    }

    // Profil Modal (eski modal)
    function openModal(t) {
        document.getElementById('modalCover').src = t.cover;
        document.getElementById('modalAvatar').src = t.avatar;
        document.getElementById('modalName').textContent = t.name;
        document.getElementById('modalExpertise').textContent = t.expertise.join(' ‚Ä¢ ');
        document.getElementById('modalBio').textContent = t.bio;
        document.getElementById('modalRating').textContent = t.rating.toFixed(1);
        document.getElementById('modalCourses').textContent = `${t.courses} ders`;
        document.getElementById('modalBadge').classList.toggle('hidden', !t.featured);
        
        // Detay butonuna teacher objesini kaydet
        const modalProfileLink = document.getElementById('modalProfileLink');
        modalProfileLink.onclick = function(e) {
            e.preventDefault();
            closeModal();
            setTimeout(() => openDetailModal(t), 60);
        };

        const list = document.getElementById('modalCoursesList');
        list.innerHTML = t.highlights.map(h => `
            <div class="relative rounded-lg overflow-hidden">
            <img src="${h.thumb}" alt="${h.title}" class="w-full h-24 object-cover">
            <div class="absolute inset-x-0 bottom-0 bg-black/50 text-[11px] sm:text-xs px-2 py-1">${h.title}</div>
            </div>
        `).join('');

        teacherModal.classList.remove('hidden');
        teacherModal.classList.add('flex');
    }

    function closeModal() {
        teacherModal.classList.add('hidden');
        teacherModal.classList.remove('flex');
    }

    // Detay Modal (CV Modal)
    function openDetailModal(t) {
        // Avatar ve temel bilgiler
        document.getElementById('detailAvatar').src = t.avatar;
        document.getElementById('detailName').textContent = t.name;
        document.getElementById('detailTitle').textContent = t.expertise.join(' ‚Ä¢ ');
        
        // Uzmanlƒ±k chips
        const expertiseList = document.getElementById('detailExpertiseList');
        expertiseList.innerHTML = t.expertise.map(exp => `
            <span class="px-3 py-1 bg-red-600/20 border border-red-500/30 text-red-400 text-sm rounded-full">${exp}</span>
        `).join('');

        // Badge
        document.getElementById('detailBadge').classList.toggle('hidden', !t.featured);

        // ƒ∞statistikler
        document.getElementById('detailRating').textContent = t.rating.toFixed(1);
        document.getElementById('detailCourses').textContent = t.courses;
        document.getElementById('detailStudents').textContent = `${t.students || '850+'}`;
        document.getElementById('detailExperience').textContent = t.experience || '10';

        // CV ƒ∞√ßeriƒüi
        document.getElementById('detailCV').innerHTML = `
            <pre class="whitespace-pre-wrap text-gray-300 leading-relaxed">${t.cv}</pre>
        `;

        // Pop√ºler dersler
        const detailCoursesList = document.getElementById('detailCoursesList');
        detailCoursesList.innerHTML = t.highlights.map(h => `
            <div class="relative rounded-xl overflow-hidden border border-zinc-700 hover:border-zinc-600 transition">
                <img src="${h.thumb}" alt="${h.title}" class="w-full h-32 object-cover">
                <div class="absolute inset-0 bg-gradient-to-t from-black/80 via-transparent to-transparent"></div>
                <div class="absolute bottom-0 left-0 right-0 p-3">
                    <h5 class="text-white font-semibold text-sm">${h.title}</h5>
                    <div class="flex items-center gap-2 mt-1">
                        <div class="flex items-center gap-1 text-yellow-400">
                            <svg class="w-3 h-3" viewBox="0 0 24 24" fill="currentColor">
                                <path d="M12 17.27L18.18 21l-1.64-7.03L22 9.24l-7.19-.61L12 2 9.19 8.63 2 9.24l5.46 4.73L5.82 21z"/>
                            </svg>
                            <span class="text-xs">${t.rating.toFixed(1)}</span>
                        </div>
                        <span class="text-gray-400 text-xs">‚Ä¢ 2.5 saat</span>
                    </div>
                </div>
            </div>
        `).join('');

        const detailProfileLink = document.getElementById('detailProfileLink');
        detailProfileLink.onclick = function(e) {
            e.preventDefault();
            closeDetailModal();
            setTimeout(() => openModal(t), 60);
        };

        // Modal'ƒ± g√∂ster
        detailModal.classList.remove('hidden');
        detailModal.classList.add('flex');

        // Dil butonlarƒ± event listeners
        document.getElementById('langTR').addEventListener('click', () => {
            switchLanguage('tr', t);
        });

        document.getElementById('langEN').addEventListener('click', () => {
            switchLanguage('en', t);
        });

        // Ba≈ülangƒ±√ßta TR dilini ayarla
        switchLanguage('tr', t);
    }
    // Dil deƒüi≈ükenleri ve √ßeviriler
    let currentLanguage = 'tr';

    const translations = {
        tr: {
            modalTitle: 'Eƒüitmen CV & Detaylarƒ±',
            cvTitle: 'Profesyonel CV & Deneyim',
            coursesTitle: '√ñne √áƒ±kan Dersler',
            featuredText: '√ñne √áƒ±kan',
            ratingText: 'Puan',
            coursesText: 'Ders',
            studentsText: '√ñƒürenci',
            experienceText: 'Yƒ±l Deneyim',
            profileBtnText: 'Profile Git',
            contactBtnText: 'ƒ∞leti≈üime Ge√ß'
        },
        en: {
            modalTitle: 'Instructor CV & Details',
            cvTitle: 'Professional CV & Experience',
            coursesTitle: 'Featured Courses',
            featuredText: 'Featured',
            ratingText: 'Rating',
            coursesText: 'Courses',
            studentsText: 'Students',
            experienceText: 'Years Experience',
            profileBtnText: 'Go to Profile',
            contactBtnText: 'Contact'
        }
    };

    // Dil deƒüi≈ütirme fonksiyonu
    function switchLanguage(lang, teacher) {
        currentLanguage = lang;
        
        // Buton stillerini g√ºncelle
        const trBtn = document.getElementById('langTR');
        const enBtn = document.getElementById('langEN');
        
        if (lang === 'tr') {
            trBtn.className = 'px-3 py-1.5 text-sm font-medium rounded-md transition-all duration-200 text-white bg-red-600 border border-red-500';
            enBtn.className = 'px-3 py-1.5 text-sm font-medium rounded-md transition-all duration-200 text-gray-400 hover:text-white hover:bg-zinc-700';
        } else {
            enBtn.className = 'px-3 py-1.5 text-sm font-medium rounded-md transition-all duration-200 text-white bg-red-600 border border-red-500';
            trBtn.className = 'px-3 py-1.5 text-sm font-medium rounded-md transition-all duration-200 text-gray-400 hover:text-white hover:bg-zinc-700';
        }
        
        // Metinleri g√ºncelle
        document.getElementById('modalTitle').textContent = translations[lang].modalTitle;
        document.getElementById('cvTitle').textContent = translations[lang].cvTitle;
        document.getElementById('coursesTitle').textContent = translations[lang].coursesTitle;
        document.getElementById('featuredText').textContent = translations[lang].featuredText;
        document.getElementById('ratingText').textContent = translations[lang].ratingText;
        document.getElementById('coursesText').textContent = translations[lang].coursesText;
        document.getElementById('studentsText').textContent = translations[lang].studentsText;
        document.getElementById('experienceText').textContent = translations[lang].experienceText;
        document.getElementById('profileBtnText').textContent = translations[lang].profileBtnText;
        document.getElementById('contactBtnText').textContent = translations[lang].contactBtnText;
        
        // CV i√ßeriƒüini g√ºncelle
        const cvContent = lang === 'en' && teacher.cvEn ? teacher.cvEn : teacher.cv;
        document.getElementById('detailCV').innerHTML = `
            <pre class="whitespace-pre-wrap text-gray-300 leading-relaxed">${cvContent}</pre>
        `;
    }

    function closeDetailModal() {
        detailModal.classList.add('hidden');
        detailModal.classList.remove('flex');
    }

    // Event Listeners
    teacherSearch.addEventListener('input', update);

    if (teacherSearchTop) {
        teacherSearchTop.addEventListener('input', (e) => {
            teacherSearch.value = e.target.value;
            update();
        });
    }

    sortSelect.addEventListener('change', update);

    resetFilters.addEventListener('click', () => {
        teacherSearch.value = '';
        if (teacherSearchTop) {
            teacherSearchTop.value = '';
        }
        // Mobil alanlarƒ± da temizle
        if (teacherSearchMobile) {
            teacherSearchMobile.value = '';
        }
        if (sortSelectMobile) {
            sortSelectMobile.value = 'popularity';
        }
        activeExpertise.clear();
        sortSelect.value = 'popularity';
        renderChips();
        update();
    });

    // Klavye: ESC ile modalleri kapat
    document.addEventListener('keydown', (e) => {
        if (e.key === 'Escape') {
            closeModal();
            closeDetailModal();
            closeMobileFilters();
        }
    });

    // Modal overlay tƒ±klayƒ±nca kapat
    if (teacherModal) {
        teacherModal.addEventListener('click', (e) => {
            if (e.target === teacherModal) closeModal();
        });
    }


    // Kapat butonlarƒ±
    if (closeTeacherModal) {
        closeTeacherModal.addEventListener('click', closeModal);
    }

    if (closeDetailModalEl) {
        closeDetailModalEl.addEventListener('click', closeDetailModal);
    }

    // ƒ∞leti≈üime Ge√ß butonu
    if (document.getElementById('detailContactBtn')) {
        document.getElementById('detailContactBtn').addEventListener('click', () => {
            alert('ƒ∞leti≈üim formu yakƒ±nda aktif olacak!');
        });
    }

    // Ba≈ülangƒ±√ß √ßizimleri
    renderChips();
    update();

</script>
