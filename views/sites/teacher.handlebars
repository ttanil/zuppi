            .teacher-name-chip:active {
                background: rgba(39, 39, 42, 0.95);
                border-color: rgba(220, 38, 38, 0.6);
                color: #f4f4f5;
                transform: scale(0.98);
            }
        }

        /* Tablet responsive */
        @media (max-width: 768px) {
            #detailModal > div {
