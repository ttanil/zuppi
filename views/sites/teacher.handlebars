            font-weight: 500;
            color: #a1a1aa;
            cursor: pointer;
            transition: all 0.25s ease;
            backdrop-filter: blur(10px);
        }

        .teacher-name-chip:hover {
            background: rgba(39, 39, 42, 0.95);
            border-color: rgba(255, 255, 255);
            color: #f4f4f5;
            transform: translateY(-2px);
            box-shadow: 0 4px 20px rgba(220, 38, 38, 0.15);
        }

        /* Carousel Styles */
        .carousel-container {
            position: relative;
            max-width: 1200px;
            margin: 0 auto;
            overflow: hidden;
            padding: 0 60px;
        }

        .carousel-wrapper {
            display: flex;
            transition: transform 0.5s ease-in-out;
            gap: 24px;
        }

        .teacher-card {
            flex: 0 0 calc(33.333% - 16px);
            min-width: 320px;
            transition: all 0.3s ease;
            cursor: pointer;
            background: #ffffff !important;
            border: 1px solid #e2e8f0 !important;
            color: #1a202c !important;
            border-radius: 24px;
            overflow: hidden;
        }

        .teacher-card:hover {
            transform: translateY(-8px);
            box-shadow: 0 25px 50px rgba(0, 0, 0, 0.15);
            background: #ffffff !important;
            border-color: #cbd5e0 !important;
        }

        /* Navigation Buttons */
        .nav-btn {
            position: absolute;
            top: 50%;
            transform: translateY(-50%);
            background: rgba(255, 255, 255, 0.9);
            border: none;
            width: 50px;
            height: 50px;
            border-radius: 50%;
            cursor: pointer;
            display: flex;
            align-items: center;
            justify-content: center;
            transition: all 0.3s ease;
            z-index: 10;
            box-shadow: 0 4px 15px rgba(0, 0, 0, 0.1);
        }

        .nav-btn:hover {
            background: rgba(255, 255, 255, 1);
            transform: translateY(-50%) scale(1.1);
            box-shadow: 0 6px 20px rgba(0, 0, 0, 0.15);
        }

        .nav-btn:disabled {
            opacity: 0.5;
            cursor: not-allowed;
            transform: translateY(-50%) scale(0.9);
        }

        .nav-btn-prev {
            left: 10px;
        }

        .nav-btn-next {
            right: 10px;
        }

        /* Carousel Dots */
        .carousel-dots {
            display: flex;
            justify-content: center;
            gap: 8px;
            margin-top: 30px;
        }

        .dot {
            width: 10px;
            height: 10px;
            border-radius: 50%;
            background: rgba(255, 255, 255, 0.3);
            cursor: pointer;
            transition: all 0.3s ease;
        }

        .dot.active {
            background: rgba(220, 38, 38, 0.8);
            transform: scale(1.2);
        }

        .teacher-card:hover .teacher-cover {
            transform: scale(1.05);
        }

        /* Card iÃ§indeki metin renklerini ayarlayÄ±n */
        .teacher-card h3 {
            color: #1a202c !important; /* Koyu gri */
        }

        .teacher-card p {
            color: #4a5568 !important; /* Orta gri */
        }

        .teacher-card .text-gray-300,
        .teacher-card .text-gray-400,
        .teacher-card .text-gray-500 {
            color: #718096 !important; /* Uyumlu gri */
        }

        .teacher-card .text-white {
            color: #1a202c !important; /* Beyaz yerine koyu */
        }

        .scrollbar-hide {
            -ms-overflow-style: none;
            scrollbar-width: none;
        }

        .scrollbar-hide::-webkit-scrollbar {
            display: none;
        }

        /* Ana profil modal */
        #teacherModal {
            backdrop-filter: blur(8px);
            transition: all 0.3s ease;
        }

        #teacherModal > div {
            transition: all 0.3s ease;
            animation: modalSlideIn 0.3s ease;
        }

        /* Detay CV modal */
        #detailModal {
            backdrop-filter: blur(8px);
        }

        #detailModal > div {
            animation: modalFadeIn 0.3s ease;
        }

        /* Modal animasyonlarÄ± */
        @keyframes modalSlideIn {
            from {
                opacity: 0;
                transform: scale(0.9) translateY(-20px);
            }
            to {
                opacity: 1;
                transform: scale(1) translateY(0);
            }
        }

        @keyframes modalFadeIn {
            from {
                opacity: 0;
                transform: translateY(-30px);
            }
            to {
                opacity: 1;
                transform: translateY(0);
            }
        }

        /* Modal close butonlarÄ± */
        #closeTeacherModal,
        #closeDetailModal {
            transition: all 0.2s ease;
        }

        #closeTeacherModal:hover,
        #closeDetailModal:hover {
            transform: rotate(90deg);
            background-color: rgba(0, 0, 0, 0.8) !important;
        }

        @media (max-width: 640px) {
            .teacher-card button {
                font-size: 0.75rem;
                padding: 0.375rem 0.75rem;
            }
            
