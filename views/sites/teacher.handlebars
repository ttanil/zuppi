    <link rel="stylesheet" href="css/index.css">
    <script src="https://cdn.tailwindcss.com"></script>
    <link href="https://fonts.googleapis.com/css2?family=Work+Sans:wght@400;700&display=swap" rel="stylesheet">
    <style>     
        body {
            overflow-x: hidden;
            background: 
                radial-gradient(110px circle at 1% 0%, 
                    #f2f2d3 0%, 
                    #ebe5bb 30%, 
                    rgba(237, 230, 175, 0.5) 60%, 
                    transparent 100%
                ),
                radial-gradient(260px circle at 70% 50%, 
                    rgba(98, 98, 98, 0.2) 0%, 
                    rgb(98, 98, 98, 0.2) 30%, 
                    rgba(98, 98, 98, 0.2) 60%, 
                    transparent 100%
                ),
                linear-gradient(135deg, 
                    #000000 0%, 
                    #1e1e1e 50%, 
                    #2d2d2d 80%, 
                    #424040 100%
                );
            min-height: 100vh;
        }

        .lottie-animation {
            margin-left: -18px;
            margin-right: -18px;
        }

        .inline-block {
            margin-left: -21px;
        }

        .zuppi-logo {
            margin-top: 6px !important;
        }

        .teacher-name-chip {
            padding: 8px 18px;
            background: rgba(24, 24, 27, 0.9);
            border: 1px solid rgba(63, 63, 70, 0.5);
            border-radius: 25px;
            font-size: 0.875rem;
            font-weight: 500;
            color: #a1a1aa;
            cursor: pointer;
            transition: all 0.25s ease;
            backdrop-filter: blur(10px);
        }

        .teacher-name-chip:hover {
            background: rgba(39, 39, 42, 0.95);
            border-color: rgba(255, 255, 255);
            color: #f4f4f5;
            transform: translateY(-2px);
            box-shadow: 0 4px 20px rgba(220, 38, 38, 0.15);
        }

        /* Carousel Styles */
        .carousel-container {
            position: relative;
            max-width: 1200px;
            margin: 0 auto;
            overflow: hidden;
            padding: 0 60px;
        }

        .carousel-wrapper {
            display: flex;
            transition: transform 0.5s ease-in-out;
            gap: 24px;
        }

        .teacher-card {
            flex: 0 0 calc(33.333% - 16px);
            min-width: 320px;
            transition: all 0.3s ease;
            cursor: pointer;
            background: #ffffff !important;
            border: 1px solid #e2e8f0 !important;
            color: #1a202c !important;
            border-radius: 24px;
            overflow: hidden;
        }

        .teacher-card:hover {
            transform: translateY(-8px);
            box-shadow: 0 25px 50px rgba(0, 0, 0, 0.15);
            background: #ffffff !important;
            border-color: #cbd5e0 !important;
        }

        /* Navigation Buttons */
        .nav-btn {
            position: absolute;
            top: 50%;
            transform: translateY(-50%);
            background: rgba(255, 255, 255, 0.9);
            border: none;
            width: 50px;
            height: 50px;
            border-radius: 50%;
            cursor: pointer;
            display: flex;
            align-items: center;
            justify-content: center;
            transition: all 0.3s ease;
            z-index: 10;
            box-shadow: 0 4px 15px rgba(0, 0, 0, 0.1);
        }

        .nav-btn:hover {
            background: rgba(255, 255, 255, 1);
            transform: translateY(-50%) scale(1.1);
            box-shadow: 0 6px 20px rgba(0, 0, 0, 0.15);
        }

        .nav-btn:disabled {
            opacity: 0.5;
            cursor: not-allowed;
            transform: translateY(-50%) scale(0.9);
        }

        .nav-btn-prev {
            left: 10px;
        }

        .nav-btn-next {
            right: 10px;
        }

        /* Carousel Dots */
        .carousel-dots {
            display: flex;
            justify-content: center;
            gap: 8px;
            margin-top: 30px;
        }

        .dot {
            width: 10px;
            height: 10px;
            border-radius: 50%;
            background: rgba(255, 255, 255, 0.3);
            cursor: pointer;
            transition: all 0.3s ease;
        }

        .dot.active {
            background: rgba(220, 38, 38, 0.8);
            transform: scale(1.2);
        }

        .teacher-card:hover .teacher-cover {
            transform: scale(1.05);
        }

        /* Card içindeki metin renklerini ayarlayın */
        .teacher-card h3 {
            color: #1a202c !important; /* Koyu gri */
        }

        .teacher-card p {
            color: #4a5568 !important; /* Orta gri */
        }

        .teacher-card .text-gray-300,
        .teacher-card .text-gray-400,
        .teacher-card .text-gray-500 {
            color: #718096 !important; /* Uyumlu gri */
        }

        .teacher-card .text-white {
            color: #1a202c !important; /* Beyaz yerine koyu */
        }

        .scrollbar-hide {
            -ms-overflow-style: none;
            scrollbar-width: none;
        }

        .scrollbar-hide::-webkit-scrollbar {
            display: none;
        }

        /* Ana profil modal */
        #teacherModal {
            backdrop-filter: blur(8px);
            transition: all 0.3s ease;
        }

        #teacherModal > div {
            transition: all 0.3s ease;
            animation: modalSlideIn 0.3s ease;
        }

        /* Detay CV modal */
        #detailModal {
            backdrop-filter: blur(8px);
        }

        #detailModal > div {
            animation: modalFadeIn 0.3s ease;
        }

        /* Modal animasyonları */
        @keyframes modalSlideIn {
            from {
                opacity: 0;
                transform: scale(0.9) translateY(-20px);
            }
            to {
                opacity: 1;
                transform: scale(1) translateY(0);
            }
        }

        @keyframes modalFadeIn {
            from {
                opacity: 0;
                transform: translateY(-30px);
            }
            to {
                opacity: 1;
                transform: translateY(0);
            }
        }

        /* Modal close butonları */
        #closeTeacherModal,
        #closeDetailModal {
            transition: all 0.2s ease;
        }

        #closeTeacherModal:hover,
        #closeDetailModal:hover {
            transform: rotate(90deg);
            background-color: rgba(0, 0, 0, 0.8) !important;
        }

        @media (max-width: 640px) {
            .teacher-card button {
                font-size: 0.75rem;
                padding: 0.375rem 0.75rem;
            }
            
            .teacher-card:hover {
                transform: translateY(-4px);
                box-shadow: 0 15px 30px rgba(0, 0, 0, 0.4);
            }
            .teacher-name-chip {
                padding: 6px 12px;
                font-size: 0.75rem;
                border-radius: 20px;
                margin: 2px;
            }
            
            .teacher-name-chip:hover {
                transform: translateY(-1px);
                box-shadow: 0 2px 12px rgba(220, 38, 38, 0.2);
            }
            
            /* Touch device için hover yerine active */
            .teacher-name-chip:active {
                background: rgba(39, 39, 42, 0.95);
                border-color: rgba(220, 38, 38, 0.6);
                color: #f4f4f5;
                transform: scale(0.98);
            }
        }

        /* Tablet responsive */
        @media (max-width: 768px) {
            #detailModal > div {
                max-width: calc(100vw - 16px) !important;
                margin: 8px !important;
                max-height: calc(100vh - 16px) !important;
            }
            
            #detailCV pre {
                font-size: 0.875rem;
                line-height: 1.4;
            }
            .teacher-card {
                flex: 0 0 calc(100% - 0px);
                min-width: 250px;
            }
            
            .carousel-container {
                padding: 0 40px;
            }
            
            .nav-btn {
                width: 40px;
                height: 40px;
            }
        }

        /* Buton hover efektleri */
        button {
            transition: all 0.2s ease;
        }

        button:hover {
            transform: translateY(-1px);
        }

        /* Link hover efektleri */
        a {
            transition: color 0.2s ease;
        }

        .gradient-border {
            background: linear-gradient(45deg, #dc2626, #7c3aed);
            padding: 1px;
            border-radius: inherit;
        }

        .gradient-border > * {
            background: #18181b;
            border-radius: inherit;
        }

        .loading {
            opacity: 0.6;
            pointer-events: none;
            position: relative;
        }

        .loading::after {
            content: '';
            position: absolute;
            top: 50%;
            left: 50%;
            width: 20px;
            height: 20px;
            margin: -10px 0 0 -10px;
            border: 2px solid #dc2626;
            border-radius: 50%;
            border-top-color: transparent;
            animation: spin 1s linear infinite;
        }

        @keyframes spin {
            to {
                transform: rotate(360deg);
            }
        }

        #detailModal {
            scrollbar-width: thin;
            scrollbar-color: #3f3f46 #18181b;
        }

        #detailModal::-webkit-scrollbar {
            width: 6px;
        }

        #detailModal::-webkit-scrollbar-track {
            background: #18181b;
        }

        #detailModal::-webkit-scrollbar-thumb {
            background: #3f3f46;
            border-radius: 3px;
        }

        #detailModal::-webkit-scrollbar-thumb:hover {
            background: #52525b;
        }

        *:focus-visible {
            outline: 2px solid #dc2626;
            outline-offset: 2px;
        }

        /* Screen reader only */
        .sr-only {
            position: absolute;
            width: 1px;
            height: 1px;
            padding: 0;
            margin: -1px;
            overflow: hidden;
            clip: rect(0, 0, 0, 0);
            white-space: nowrap;
            border: 0;
        }

        @media print {
            .teacher-card {
                box-shadow: none !important;
                transform: none !important;
            }
            
            #teacherModal,
            #detailModal {
                display: none !important;
            }
        }
    </style>
</head>

